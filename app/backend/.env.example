# Environment Configuration for Docker Swarm Backend

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=appdb
DB_USER=user
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_INTERVAL=30000
